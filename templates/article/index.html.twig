{% extends 'base.html.twig' %}

{% block title %}
    {% if selectedCategory %}
        Articles - {{ selectedCategory.name }}
    {% else %}
        Tous les Articles
    {% endif %} - Blog Murim
{% endblock %}

{% block body %}
<div class="main-content">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1>
                        <i class="fas fa-scroll me-2 text-warning"></i>
                        {% if selectedCategory %}
                            Articles - {{ selectedCategory.name }}
                        {% else %}
                            Tous les Articles
                        {% endif %}
                    </h1>
                    {% if app.user %}
                        <a href="{{ path('app_article_new') }}" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i>Nouvel Article
                        </a>
                    {% endif %}
                </div>

                {% if selectedCategory %}
                    <div class="alert alert-info mb-4">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>{{ selectedCategory.name }}</strong> - {{ selectedCategory.description }}
                        <a href="{{ path('app_article_index') }}" class="btn btn-sm btn-outline-primary ms-3">
                            Voir tous les articles
                        </a>
                    </div>
                {% endif %}

                {% if articles is empty %}
                    <div class="text-center py-5">
                        <i class="fas fa-scroll fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">
                            {% if selectedCategory %}
                                Aucun article dans cette catégorie
                            {% else %}
                                Aucun article disponible
                            {% endif %}
                        </h4>
                        <p class="text-muted">
                            {% if selectedCategory %}
                                Cette catégorie attend ses premiers articles...
                            {% else %}
                                Le blog attend ses premiers articles...
                            {% endif %}
                        </p>
                        {% if app.user %}
                            <a href="{{ path('app_article_new') }}" class="btn btn-primary mt-3">
                                <i class="fas fa-plus me-1"></i>Créer un article
                            </a>
                        {% endif %}
                    </div>
                {% else %}
                    <div class="row">
                        {% for article in articles %}
                            <div class="col-12 mb-4">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-8">
                                                <div class="d-flex align-items-center mb-2">
                                                    <a href="{{ path('app_article_index', {category: article.category.id}) }}" 
                                                       class="category-badge me-3" 
                                                       style="background-color: {{ article.category.color }}">
                                                        {{ article.category.name }}
                                                    </a>
                                                    <small class="text-muted">
                                                        {{ article.createdAt|date('d/m/Y à H:i') }}
                                                    </small>
                                                </div>
                                                <h4 class="card-title">
                                                    <a href="{{ path('app_article_show', {id: article.id}) }}" 
                                                       class="text-decoration-none text-dark">
                                                        {{ article.title }}
                                                    </a>
                                                </h4>
                                                {% if article.excerpt %}
                                                    <p class="card-text">{{ article.excerpt }}</p>
                                                {% endif %}
                                                <div class="article-meta">
                                                    <i class="fas fa-user me-1"></i>{{ article.author.username }}
                                                    <span class="mx-2">•</span>
                                                    <i class="fas fa-comments me-1"></i>{{ article.comments|length }} commentaire(s)
                                                </div>
                                            </div>
                                            <div class="col-md-4 text-md-end">
                                                <a href="{{ path('app_article_show', {id: article.id}) }}" 
                                                   class="btn btn-outline-primary mb-2">
                                                    <i class="fas fa-eye me-1"></i>Lire
                                                </a>
                                                {% if app.user and (article.author == app.user or is_granted('ROLE_ADMIN')) %}
                                                    <br>
                                                    <a href="{{ path('app_article_edit', {id: article.id}) }}" 
                                                       class="btn btn-sm btn-outline-secondary me-1">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <form method="post" action="{{ path('app_article_delete', {id: article.id}) }}" 
                                                          style="display: inline-block;" 
                                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?')">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                                                        <button class="btn btn-sm btn-outline-danger">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

            <div class="col-lg-4">
                <div class="sidebar">
                    <h5><i class="fas fa-filter me-2 text-warning"></i>Filtrer par catégorie</h5>
                    <div class="list-group list-group-flush">
                        <a href="{{ path('app_article_index') }}" 
                           class="list-group-item list-group-item-action {% if not selectedCategory %}active{% endif %}">
                            <i class="fas fa-list me-2"></i>Toutes les catégories
                        </a>
                        {% for category in categories %}
                            <a href="{{ path('app_article_index', {category: category.id}) }}" 
                               class="list-group-item list-group-item-action d-flex justify-content-between align-items-center {% if selectedCategory and selectedCategory.id == category.id %}active{% endif %}">
                                <span>
                                    <span class="badge rounded-pill me-2" 
                                          style="background-color: {{ category.color }}; width: 12px; height: 12px;"></span>
                                    {{ category.name }}
                                </span>
                                <span class="badge bg-secondary rounded-pill">{{ category.articles|length }}</span>
                            </a>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}