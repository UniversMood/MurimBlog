{% extends 'base.html.twig' %}

{% block title %}Nouvel Article - Murim Mania{% endblock %}

{% block body %}
<div class="main-content">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h2 class="mb-0">
                            <i class="fas fa-plus me-2"></i>Créer un Nouvel Article
                        </h2>
                    </div>
                    <div class="card-body">
                        <nav aria-label="breadcrumb" class="mb-4">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
                                <li class="breadcrumb-item"><a href="{{ path('app_article_index') }}">Articles</a></li>
                                <li class="breadcrumb-item active">Nouveau</li>
                            </ol>
                        </nav>

                        {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_label(form.title) }}
                                {{ form_widget(form.title) }}
                                {{ form_errors(form.title) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.category) }}
                                {{ form_widget(form.category) }}
                                {{ form_errors(form.category) }}
                                <div class="form-text">Choisissez la catégorie qui correspond le mieux à votre article.</div>
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.excerpt) }}
                                {{ form_widget(form.excerpt) }}
                                {{ form_errors(form.excerpt) }}
                                <div class="form-text">Un court résumé de votre article (optionnel).</div>
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.content) }}
                                {{ form_widget(form.content) }}
                                {{ form_errors(form.content) }}
                                <div class="form-text">Rédigez le contenu complet de votre article.</div>
                            </div>

                            <div class="mb-4">
                                <div class="form-check">
                                    {{ form_widget(form.published) }}
                                    {{ form_label(form.published, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                </div>
                                {{ form_errors(form.published) }}
                                <div class="form-text">Décochez si vous souhaitez sauvegarder en brouillon.</div>
                            </div>

                            <div class="d-flex justify-content-between">
                                <a href="{{ path('app_article_index') }}" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-1"></i>Retour
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-1"></i>Créer l'Article
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>

                <div class="mt-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-lightbulb me-2 text-warning"></i>Conseils de Rédaction
                            </h5>
                        </div>
                        <div class="card-body">
                            <ul class="mb-0">
                                <li><strong>Titre accrocheur :</strong> Choisissez un titre qui donne envie de lire votre article.</li>
                                <li><strong>Résumé efficace :</strong> Le résumé apparaît sur la page d'accueil, rendez-le attractif.</li>
                                <li><strong>Contenu structuré :</strong> Utilisez des paragraphes courts et aérés pour faciliter la lecture.</li>
                                <li><strong>Catégorie appropriée :</strong> Choisissez la catégorie qui correspond le mieux au sujet traité.</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}